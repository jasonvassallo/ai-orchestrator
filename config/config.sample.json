{
  "$schema": "./config-schema.json",
  "version": "2.0.0",
  
  "_comment": "⚠️ SECURITY: NEVER store API keys in this file! Use the credential manager instead.",
  
  "defaults": {
    "preferLocal": false,
    "localProvider": "mlx",
    "costOptimize": false,
    "maxTokens": 4096,
    "temperature": 0.7,
    "timeout": 120
  },
  
  "models": {
    "claude-opus-4.5": {
      "enabled": true,
      "priority": 90
    },
    "claude-sonnet-4.5": {
      "enabled": true,
      "priority": 80
    },
    "gpt-4o": {
      "enabled": true,
      "priority": 75
    },
    "o1": {
      "enabled": true,
      "priority": 85
    },
    "gemini-2.0-flash": {
      "enabled": true,
      "priority": 70
    },
    "mlx-llama-vision-11b": {
      "enabled": true,
      "priority": 60
    }
  },
  
  "providers": {
    "ollama": {
      "baseUrl": "http://localhost:11434",
      "models": [
        "llama3.2",
        "codellama",
        "deepseek-coder-v2",
        "mistral"
      ]
    },
    "openai": {
      "organization": "",
      "baseUrl": "https://api.openai.com/v1"
    },
    "anthropic": {
      "baseUrl": "https://api.anthropic.com"
    },
    "vertex-ai": {
      "location": "global"
    }
  },
  
  "rateLimits": {
    "openai": {
      "requestsPerMinute": 60,
      "tokensPerMinute": 150000
    },
    "anthropic": {
      "requestsPerMinute": 60,
      "tokensPerMinute": 100000
    },
    "google": {
      "requestsPerMinute": 60,
      "tokensPerMinute": 120000
    },
    "ollama": {
      "requestsPerMinute": 120,
      "tokensPerMinute": 500000
    }
  },
  
  "logging": {
    "level": "INFO",
    "redactSensitive": true
  },
  
  "security": {
    "maxPromptLength": 500000,
    "maxMessages": 100,
    "allowRemoteExecution": false
  },
  
  "taskRouting": {
    "code": ["claude-sonnet-4.5", "deepseek-coder-v2", "gpt-4o"],
    "reasoning": ["o1", "claude-opus-4.5"],
    "creative": ["claude-opus-4.5", "gpt-4o"],
    "summarization": ["claude-haiku-4.5", "gpt-4o-mini"],
    "local": ["mlx-llama-vision-11b"],
    "long-context": ["gemini-1.5-pro", "claude-opus-4.5"]
  },

  "musicGeneration": {
    "_comment": "MusicGen AI model for audio generation (requires .music-venv)",
    "defaultModel": "musicgen-small",
    "availableModels": [
      "musicgen-small",
      "musicgen-medium",
      "musicgen-large",
      "musicgen-stereo-small",
      "musicgen-stereo-medium",
      "musicgen-stereo-large",
      "musicgen-melody",
      "musicgen-melody-large"
    ]
  }
}
